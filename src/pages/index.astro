  /> -->

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'E-Mail',
        href: 'mailto:belle@acebridge.co',
        target: '_blank',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title"> 聯繫我們 </Fragment>

    <Fragment slot="subtitle">
      郵件: belle@acebridge.co<br />
    </Fragment>
  </CallToAction>
</Layout>
